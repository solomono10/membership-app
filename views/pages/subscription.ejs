    <%- include('../partials/navbar.ejs') %>

    <main role="main" class="container">
      <div class="col-lg-8  mx-auto content-div">
        <h1>Catalogue Request form</h1>
        <hr class="mb-4" />
        <p class="h4">
          First Name:
          <span id="inputCFirstName" class="read-only-text"
            ><%= user.firstName %></span
          >
        </p>
        <hr class="mb-4" />
        <p class="h4">
          Last Name:
          <span id="inputCLastName" class="read-only-text"
            ><%= user.lastName %></span
          >
        </p>
        <hr class="mb-4" />
        <form action="/subscription" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label class="h4" for="inputAddress">Address</label>
              <input
                type="address"
                class="form-control"
                id="inputCAddress"
                name="address"
                value=""
              />
            </div>
          </div>
          <hr class="mb-4" />
          <button
            class="btn btn-primary btn-lg btn-block"
            id="btnComplete"
            type="submit"
          >
            Submit
          </button>
        </form>
      </div>
    </main>

